<h1>New Advertisement</h1>

<div class= "row">
    <div class="col-md-4">
        <p>Advertisement Rules</p>
        <ul>
            <li>No harmful products</li>
            <li>No untested products</li>
            <li>No false advertising</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisement do |section| %>
            <div class="form-group">
                <%=section.label :title %>
                <%= section.text_field :title, class: 'form-control', placeholder: "Advertising Company Here" %>
            </div>
            <div class="form-group">
                <%= section.label :body %>
                <%= section.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter Advertisement info here" %>
            </div>
            <div class="form-group">
                <%= section.submit "Save", class: 'btn btn-success' %>
            </div>
            <% end %>
    </div>
</div>